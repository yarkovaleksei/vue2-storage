{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2017"],
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "pretty": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "config",
    "**/*.{js,json}"
  ]
}
